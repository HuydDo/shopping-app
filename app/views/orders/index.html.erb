<h1> Listing orders </h1>
<h3><strong><%= Item.find(params[:item_id]).name if params[:item_id]%></strong></h3>
<div class="media">
 <div class="media-body">
   <table class="table table-hover">
    <thead>
      <tr>
        <th colspan = "4"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <strong>Order by</strong>
        </td>
        <td>
          <strong>Qty</strong>
        </td>
        <td>
          <strong>Review</strong>
        </td>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.user.name  %></td>
          <td><%= order.quantity %></td>
          <td><%= order.review %></td>
          <% if order.user == current_user %>
           <td> <%= link_to "Edit", edit_item_order_path(order.item, order), class: 'btn btn-mini btn-success' %></td>
          <% end %>
        </tr>
      <% end %>
     </tbody>
   </table>
  </div>
</div>

<%= link_to "Listing Items", items_path %>
