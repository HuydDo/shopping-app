<h2>Listing orders</h2>
 <div class="media">
 <div class="media-body">
 <table class="table table-hover">
  <thead>
    <tr>
      <th colspan = "5"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <strong>User</strong>
      </td>
      <td>  
         <strong>Items</strong>
      </td>
      <td>
        <strong>Quantity</strong>
      </td>
      <td>
        <strong>Review</strong>
      </td>

    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= User.find(order.user_id).name  %></td>
      <td><%= Item.find(order.item_id).name %></td>
      <td><%= order.quantity %></td>
      <td><%= order.review %></td>
      <% if order.user == current_user %>
       <td> <%= link_to "Edit Review", edit_item_order_path(order.item, order) if order.item %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
 </table>
  </div>
</div>
 <br />
<%# link_to 'Back', user_path(current_user) %>