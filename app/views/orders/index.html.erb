<h1> Listing orders </h1>
<h3><strong><%= Item.find(params[:item_id]).name %></strong></h3>
<div class="media">
 <div class="media-body">
   <table class="table table-hover">
    <thead>
      <tr>
        <th colspan = "4"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <strong>Order by</strong>
        </td>
        <td>
          <strong>Qty</strong>
        </td>
        <td>
          <strong>Review</strong>
        </td>
      </tr>
      <% @orders.each do |order| %>
      <tr>
        <td><%= User.find(order.user_id).name  %></td>
        <%# Item.find(order.item_id).name %>
        <td><%= order.quantity %></td>
        <td><%= order.review %></td>
        <% if order.user == current_user %>
         <td> <%= link_to "Edit", edit_item_order_path(order.item, order) if order.item %></td>
        <% end %>
      </tr>
      <% end %>
     </tbody>
   </table>
  </div>
</div>
<br />
<%= link_to "Back", items_path %>
<%# link_to 'Back', user_path(current_user) %>