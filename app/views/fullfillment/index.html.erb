<% @user = User.find_by(:id => current_user.id) %>
<h1>Welcome <%= @user.name %></h1>

<% if @user %> 
 <h4>Shopping Cart:</h4> 
 <div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Shipping Status</th>
          <th>Total</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
       
          <td><%= item.name %></td>
          <td><%=  number_to_currency(item.price) %></td>
          <td><%= item.quantity %></td>
          <td><%= item.shipping_status.nil? ? 'pending': 'shipped' %></td>
          <td><%= number_to_currency(item.price * item.quantity)%></td>
          <td><%= link_to "Edit", edit_order_path(order), class: 'btn btn-mini btn-success' %></td>
          <td><%= link_to "Delete", order_path(order), method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete this item?" } %></td>
         <% end %>
      </tbody>
     </table>
  </div>
 </div>

 <%= subtotal(@user) %>
<% end %> 
