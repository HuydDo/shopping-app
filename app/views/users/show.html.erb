<%# if @user %>
  <h1>Welcome <%= @user.name %></h1>

  <% if @user.orders %>
     Shopping Cart: 
     <ul>
       <% @user.orders.each do |order| %>
        <li><%= link_to order.item.name, 
          item_path(order.item) %>
          Price: $<%=  order.item.price %>
          Quantity:<%= order.quantity %> 
          <%=order.delivered  ? "delivered" : "not delivered" %>
        </li>
       <% end %>
       
        </li>
     </ul>
  <% end %>
<%# else %>
  <%= link_to "Listing Items", items_path %>
<%# end %>