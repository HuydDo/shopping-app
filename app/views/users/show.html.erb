<h1>Welcome <%= @user.name %></h1>

<% if @user.orders %>
 <h4>Shopping Cart:</h4> 
 <div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Shipping Status</th>
          <th>Total</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @user.orders.each do |order| %>
          <% if order.present? %>
           <%= render partial: 'listitem', locals: {order: order}  %>
         <%  end %>
        <% end %>
      </tbody>
     </table>
  </div>
 </div>

 <%= subtotal(@user) %>
<% end %>
<br />

<%= link_to "Listing All Orders", orders_path, class: 'btn btn-mini' %><br />
<%= link_to "Listing Items", items_path, class: 'btn btn-mini' %><br />

<%= link_to "All #{@user.name}'s listed items", user_items_path(@user), class: 'btn btn-mini' %>

