<h1>Edit Item</h1>

<%= form_for(@item) do |f| %>
  
    <div class="field">
      <%= f.label "Name:" %>
      <%= f.text_field :name %>
    </div>
    
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="field">
      <%= f.label "Price:" %>
      <%= f.text_field :price %>
    </div>

    <div class="field">
      <%= f.label "Description:" %>
      <%= f.text_area :description %>
    </div>

   
    <div class="actions"> 
       <%= f.submit "Update"%>
    </div>
 
<% end %>



    