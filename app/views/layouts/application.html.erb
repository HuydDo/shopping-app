<!DOCTYPE html>
<html>
  <head>
    <title>ShoppingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   
    <link rel="stylesheet" href="/styles/index.css">
    
    <%# stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   
   <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
   <%= javascript_pack_tag 'application', turbolink_track: true %>

    <%# javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%# javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
   
</head>

<body>
<div class="container">
  <ul class="nav nav-tabs">
    <li><%= link_to "Home", root_url %></li>
   
    <% if current_user %>
      <li><%= link_to "Sign Out", session_path, method: :delete %></li>
      <li><%= link_to "#{current_user.name}'s profile", user_path(current_user) %></li>
    
    <% else %>
      <li><%= link_to "Sign Up", new_user_path %></li>
      <li><%= link_to "Sign In", signin_path %></li>
      <li><%= link_to('Log in with Facebook', '/auth/facebook') %></li>
    <% end %>

  </ul>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <%= yield %>
  
</div>

  

  </body>
</html>
